<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="409dp"
    android:layout_height="729dp"
    tools:layout_editor_absoluteX="1dp"
    tools:layout_editor_absoluteY="1dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="417dp"
            android:layout_height="72dp"
            android:background="#2196F3"
            app:menu="@menu/menu_home"/>


        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="410dp"
            android:layout_height="676dp"
            android:paddingLeft="220dp"
            android:paddingTop="0dp"
            android:paddingRight="450dp"
            android:paddingBottom="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bgggg"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="314dp"
            android:layout_height="67dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="#99141414"
            android:fontFamily="sans-serif-medium"
            android:padding="21dp"
            android:text="Better Meals, Better World."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bottom_navigation"
            app:layout_constraintVertical_bias="0.17" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="314dp"
            android:layout_height="55dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:background="#99141414"
            android:fontFamily="sans-serif-medium"
            android:text="Discover New Taste With Us"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/footerLayout1"
            android:layout_width="411dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24dp"
            android:background="#002395"
            android:orientation="horizontal"
            android:padding="80dp"
            app:layout_constraintBottom_toBottomOf="@+id/backgroundImageView"
            tools:layout_editor_absoluteX="-3dp">

            <TextView
                android:layout_width="267dp"
                android:layout_height="54dp"
                android:layout_gravity="center"
                android:text="Contact Us                                                                                               Call Us 012-345-678                                                                                                                            Address: Dagupan City"

                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"
                tools:layout_editor_absoluteX="23dp"
                tools:layout_editor_absoluteY="316dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/footerLayout2"
            android:layout_width="416dp"
            android:layout_height="45dp"
            android:layout_alignStart="@+id/footerLayout1"
            android:layout_alignLeft="@+id/footerLayout1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="#000080"
            android:orientation="horizontal"
            android:padding="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/footerLayout1"
            app:layout_constraintHorizontal_bias="0.375"
            app:layout_constraintStart_toStartOf="@+id/footerLayout1"
            app:layout_constraintTop_toBottomOf="@+id/footerLayout1"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:layout_width="269dp"
                android:layout_height="33dp"
                android:layout_gravity="center"
                android:text="Â© SIBOL 2024"
                android:textAlignment="center"
                android:textColor="@color/white" />


        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="219dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:text="Next Page"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.719" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>